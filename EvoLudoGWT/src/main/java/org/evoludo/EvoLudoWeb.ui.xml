<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:org.evoludo.ui">
	<ui:style gss="true">
	.header {
		display: flex;
	}
	.header_half {
		flex: 1;
		font-size: small;
		margin: 2px;
		text-align: left;
	}
	.controls {
		display: flex;
	}
	.control_button, .parameter_button {
		flex: 1;
		margin: 2px;
		text-align: center;
	}
	.parameters {
		display: flex;
		flex-direction: row;
	}
	.parameter_controls {
		display: flex;
		flex: 1;
		flex-direction: column;
	}
	.parameter_options {
		border: 1px solid #ccc;
		border-radius: 3px;
		display: flex;
		flex: 3;
		font-size: small;
		margin: 2px;
		padding: 4px;
	}
	.deck {
		clear: both;
		margin-top: 4pt;
		margin-bottom: 4pt;
	}
	.slider {
		clear: both;
	}
	.overflow>div {
		overflow: visible !important;
	}
	.evoludo-Lab {
		position: relative;
		overflow: hidden;
		resize: none !important;
	}
	.noresize {
		resize: none;
	}
	.status {
		margin-top: 4pt;
		clear: both;
		resize: none;
		font-size: 9pt;
		height: 21pt;
		line-height: 1.2;
	}
	.evoludo-Panel {
		height: 100%;
		position: relative;
	}
	</ui:style>
	<g:HTMLPanel ui:field='evoludoPanel'
		styleName='{style.evoludo-Panel}'>
		<g:HTML ui:field='evoludoOverlay'
			styleName='evoludo-dropOverlay'>
			<span>Drop saved state to restore</span>
		</g:HTML>
		<g:ResizeLayoutPanel ui:field='evoludoResize'
			styleName='{style.evoludo-Lab} evoludo-Lab'>
			<g:HeaderPanel ui:field='evoludoLayout'
				styleName='{style.noresize}'>
				<!-- header: generations and view selector -->
				<g:FlowPanel styleName="{style.header}">
					<g:Label ui:field='evoludoTime' styleName='{style.header_half}'
						title="Number of generations elapsed">time: -</g:Label>
					<g:ListBox ui:field='evoludoViews' visibleItemCount='1'  styleName='{style.header_half}'/>
				</g:FlowPanel>

				<!-- main: deck with canvases -->
				<g:DeckLayoutPanel ui:field='evoludoDeck'
					addStyleNames="evoludo-Deck {style.deck} {style.overflow}"></g:DeckLayoutPanel>

				<!-- footer -->
				<g:FlowPanel>
					<!-- slider -->
					<e:Slider ui:field='evoludoSlider'
						addStyleNames='gwt-Slider {style.slider}'></e:Slider>

					<!-- control buttons -->
					<g:FlowPanel styleName='{style.controls}'>
						<g:Button ui:field='evoludoSettings'
							title="Change simulation parameters"
							addStyleNames='{style.control_button}'>Settings</g:Button>
						<g:Button ui:field='evoludoInitReset'
							title="Initialize population (press Alt to re-initialize structure)"
							addStyleNames='{style.control_button}'>Init</g:Button>
						<g:Button ui:field='evoludoStartStop'
							title="Start/stop simulations" addStyleNames='{style.control_button}'>Start</g:Button>
						<g:Button ui:field='evoludoStep'
							title="Advance single simulation step"
							addStyleNames='{style.control_button}'>Step</g:Button>
					</g:FlowPanel>

					<!-- parameters -->
					<g:FlowPanel ui:field='evoludoCLOPanel' styleName='{style.parameters}' visible='false'>
						<!-- <textarea> is disabled in Apple Books, let's go with simpler editable
						div for now...
 				 		<g:TextArea ui:field='evoludoCLO' 
				 			title="Specify simulation parameters" 
				 			visibleLines='5'
				 			styleName='evoludo-CLO {style.threequarter} {style.clotext}'></g:TextArea> -->
						<g:Label ui:field='evoludoCLO'
							title="Specify simulation parameters"
							styleName='{style.parameter_options}'></g:Label>
						<g:FlowPanel styleName='{style.parameter_controls}'>
							<g:Button ui:field='evoludoApply'
								title="Apply parameters"
								addStyleNames='{style.parameter_button}'>Apply</g:Button>
							<g:Button ui:field='evoludoDefault'
								title="Restore default parameters"
								addStyleNames='{style.parameter_button}'>Default</g:Button>
							<g:Button ui:field='evoludoHelp'
								title="Help on parameter settings"
								addStyleNames='{style.parameter_button}'>Help</g:Button>
						</g:FlowPanel>
					</g:FlowPanel>

					<!-- status line at the end (non-floating) -->
					<g:HTML ui:field='evoludoStatus'
						title="Summary of current status"
						addStyleNames='{style.status} evoludo-Status'>
						EvoLudo is getting ready...
					</g:HTML>
				</g:FlowPanel>

			</g:HeaderPanel>
		</g:ResizeLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 